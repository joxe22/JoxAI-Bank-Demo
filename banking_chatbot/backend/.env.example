# ============================================
# BANKING CHATBOT - ENVIRONMENT VARIABLES
# ============================================

# Application
APP_NAME="Banking ChatBot API"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True
API_V1_PREFIX="/api/v1"

# Server
HOST="0.0.0.0"
PORT=8000
RELOAD=True

# Database - PostgreSQL
DATABASE_URL="postgresql://chatbot_user:your_password@localhost:5432/chatbot_db"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Cache
REDIS_URL="redis://localhost:6379/0"
REDIS_CACHE_TTL=3600

# Security - JWT
SECRET_KEY="your-super-secret-key-change-this-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma separated)
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:8080"

# OpenAI API
OPENAI_API_KEY="sk-..."
OPENAI_MODEL="gpt-4-turbo-preview"
OPENAI_TEMPERATURE=0.7

# Anthropic Claude (opcional)
ANTHROPIC_API_KEY=""
ANTHROPIC_MODEL="claude-3-sonnet-20240229"

# Vector Database - Qdrant
QDRANT_HOST="localhost"
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME="banking_knowledge"
QDRANT_API_KEY=""

# NLP - spaCy
SPACY_MODEL="es_core_news_md"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Sentry (Error tracking)
SENTRY_DSN=""

# File Upload
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES="pdf,txt,docx,csv"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Session
SESSION_TIMEOUT_MINUTES=30

# Admin Default User (creado en primera ejecuci√≥n)
ADMIN_EMAIL="admin@banco.com"
ADMIN_PASSWORD="admin123"
ADMIN_NAME="Admin User"