# 🔐 Template de Secretos
# Ubicación: config/secrets.yaml.template
#
# INSTRUCCIONES:
# 1. Copia este archivo como secrets.yaml
# 2. Llena los valores reales
# 3. NUNCA commites secrets.yaml al repositorio

# 🤖 API Keys para LLM
openai:
  api_key: "sk-your-openai-api-key-here"
  organization_id: "org-your-org-id" # opcional

anthropic:
  api_key: "sk-ant-your-anthropic-key-here"

# 🗄️ Base de datos
database:
  username: "chatbot_user"
  password: "your-secure-password-here"
  host: "localhost"
  port: 5432
  database: "chatbot_db"

# 🔴 Redis
redis:
  password: null  # null si no tiene password

# 🔐 Seguridad
security:
  secret_key: "your-super-secret-jwt-key-here-make-it-long-and-random"
  encryption_key: "your-32-character-encryption-key"

# 🏦 Integración Bancaria (APIs del Core Banking)
banking:
  api_url: "https://api.your-bank.com"
  api_key: "your-banking-api-key"
  client_id: "your-client-id"
  client_secret: "your-client-secret"

# 📧 Email/SMTP
email:
  smtp_server: "smtp.gmail.com"
  smtp_port: 587
  username: "your-email@gmail.com"
  password: "your-app-password"

# 📱 Slack (para notificaciones)
slack:
  bot_token: "xoxb-your-slack-bot-token"
  webhook_url: "https://hooks.slack.com/services/YOUR/WEBHOOK/URL"

# ☁️ Cloud Storage (si usas S3, GCS, etc.)
aws:
  access_key_id: "your-aws-access-key"
  secret_access_key: "your-aws-secret-key"
  region: "us-east-1"
  s3_bucket: "your-bucket-name"

# 📊 Monitoring
monitoring:
  sentry_dsn: "https://your-sentry-dsn"
  datadog_api_key: "your-datadog-key"

# 🔍 External APIs
external_apis:
  fraud_detection:
    api_key: "your-fraud-api-key"
  kyc_service:
    api_key: "your-kyc-api-key"