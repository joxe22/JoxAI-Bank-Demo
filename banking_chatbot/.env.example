# 🔧 Variables de Entorno - Banking Chatbot con IA
# Ubicación: /.env.example
#
# INSTRUCCIONES:
# 1. Copia este archivo como .env
# 2. Llena los valores reales
# 3. NUNCA commites .env al repositorio

# 🏗️ Aplicación
APP_NAME="Banking Chatbot API"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development
HOST=0.0.0.0
PORT=8000

# 🗄️ Base de datos
DATABASE_URL=sqlite:///./chatbot.db
DATABASE_ECHO=True

# 🔴 Redis
REDIS_URL=redis://localhost:6379/0

# 🔍 Vector Database (Qdrant)
VECTOR_DB_URL=http://localhost:6333
VECTOR_COLLECTION_NAME=banking_knowledge
VECTOR_SIZE=384

# 🤖 LLM Configuration
LLM_PROVIDER=openai
LLM_MODEL=gpt-3.5-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1000
LLM_TIMEOUT=30

# 🔑 API Keys (¡CAMBIA ESTOS!)
OPENAI_API_KEY=sk-your-openai-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_ORGANIZATION_ID=org-your-org-id

ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# 🏠 Local LLM (Ollama/vLLM)
LOCAL_LLM_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama2

# 🔐 Seguridad (¡CAMBIA ESTO!)
SECRET_KEY=your-super-secret-key-change-in-production-make-it-long
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# 🌐 CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000

# 📊 Monitoring
LOG_LEVEL=INFO
ENABLE_METRICS=True
SENTRY_DSN=https://your-sentry-dsn

# 🤖 AI Features
AI_ENABLED=True
RAG_ENABLED=True
FALLBACK_TO_MOCK=True
SIMILARITY_THRESHOLD=0.7
MAX_CONTEXT_LENGTH=2000

# 📄 Document Processing
MAX_DOCUMENT_SIZE_MB=10
SUPPORTED_FORMATS=pdf,docx,txt
CHUNK_SIZE=500
CHUNK_OVERLAP=50